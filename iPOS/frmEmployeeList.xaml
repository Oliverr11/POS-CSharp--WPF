<Window x:Class="iPOS.frmEmployeeList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iPOS"
        mc:Ignorable="d"
        Title="frmEmployeeList" Height="450" Width="800">
    <Grid>
        <DataGrid MouseDoubleClick="dgvEmployeeList_MouseDoubleClick" x:Name="dgvEmployeeList"  AutoGenerateColumns="True" IsReadOnly="True"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="0.1*" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Width="0.2*"  Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Username" Width="0.2*"  Binding="{Binding Username}"/>
                <DataGridTextColumn Header="Password" Width="0.2*"  Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Phone" Width="0.2*"  Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="Salary" Width="0.2*"  Binding="{Binding Salary}"/>
                <DataGridTextColumn Header="Address" Width="0.2*"  Binding="{Binding Address}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
